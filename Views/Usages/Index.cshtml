@model IEnumerable<FacilityManagement.Models.Usage>

@{
    ViewData["Title"] = "Danh sách sử dụng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>

    h1, h2, h3, h4, h5, h6 {
        color: #eb272c;
    }

    .btn-primary {
        background-color: #eb272c;
        border-color: #eb272c;
    }

        .btn-primary:hover {
            background-color: #c91f24;
            border-color: #c91f24;
        }

    .table {
        border: 1px solid #4b8ac9;
    }

        .table th {
            background-color: #4b8ac9;
            color: #ffffff;
            text-align: center;
        }

        .table td {
            text-align: center;
        }

    .table-hover tbody tr:hover {
        background-color: #f8d7da;
    }
</style>

<h1>Danh Sách Sử Dụng</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Tạo Mới</a>
</p>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Người Sử Dụng</th>
            <th>Ngày Sử Dụng</th>
            <th>Mục Đích Sử Dụng</th>
            <th>Loại Phòng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.UsedBy)</td>
                <td>@Html.DisplayFor(modelItem => item.UsageDate)</td>
                <td>@Html.DisplayFor(modelItem => item.Purpose)</td>
                <td>@Html.DisplayFor(modelItem => item.Room.RoomType)</td>
            </tr>
        }
    </tbody>
</table>
