@model FacilityManagement.Models.Usage

@{
    ViewData["Title"] = "Tạo Mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>

    h1, h2, h3, h4, h5, h6 {
        color: #eb272c;
    }

    .btn-primary {
        background-color: #eb272c;
        border-color: #eb272c;
    }

        .btn-primary:hover {
            background-color: #c91f24;
            border-color: #c91f24;
        }

    .btn-secondary {
        background-color: #4b8ac9;
        border-color: #4b8ac9;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #3a78a7;
            border-color: #3a78a7;
        }

    .form-control {
        border: 1px solid #4b8ac9;
    }

    .form-group label {
        font-weight: bold;
        color: #4b8ac9;
    }
</style>

<h1>Tạo Mới</h1>

<h4>Thông Tin Sử Dụng Phòng</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="RoomId" class="control-label">Chọn Phòng</label>
                <select asp-for="RoomId" class="form-control" asp-items="ViewBag.RoomId"></select>
            </div>

            <div class="form-group">
                <label asp-for="UsedBy" class="control-label">Người Sử Dụng</label>
                <input asp-for="UsedBy" class="form-control" disabled />
                <span asp-validation-for="UsedBy" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UsageDate" class="control-label">Ngày Sử Dụng</label>
                <input asp-for="UsageDate" type="date" class="form-control" />
                <span asp-validation-for="UsageDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Purpose" class="control-label">Mục Đích Sử Dụng</label>
                <input asp-for="Purpose" class="form-control" />
                <span asp-validation-for="Purpose" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Tạo Mới" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Quay Lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
