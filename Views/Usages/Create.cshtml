@model FacilityManagement.Models.Usage

@{
    ViewData["Title"] = "Tạo Mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    h1, h2, h3, h4, h5, h6 {
        color: #052c93; /* Màu chủ đạo: Xanh đậm */
    }

    .btn-primary {
        background-color: #052c93;
        border-color: #052c93;
        color: white;
    }

        .btn-primary:hover {
            background-color: #041f6b;
            border-color: #041f6b;
        }

    .btn-secondary {
        background-color: #ccc;
        border-color: #ccc;
        color: black;
    }

        .btn-secondary:hover {
            background-color: #b3b3b3;
        }

    .form-control {
        border: 1px solid #052c93;
    }

    .form-group label {
        font-weight: bold;
        color: #052c93;
    }
</style>

<h1 class="text-primary"><i class="fas fa-plus-circle"></i> Tạo Mới</h1>

<h4>Thông Tin Sử Dụng Phòng</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="RoomId" class="control-label"><i class="fas fa-door-open"></i> Chọn Phòng</label>
                <select asp-for="RoomId" class="form-control" asp-items="ViewBag.RoomId"></select>
            </div>

            <div class="form-group">
                <label asp-for="UsedBy" class="control-label"><i class="fas fa-user"></i> Người Sử Dụng</label>
                <input asp-for="UsedBy" class="form-control" disabled />
                <span asp-validation-for="UsedBy" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UsageDate" class="control-label"><i class="fas fa-calendar-alt"></i> Ngày Sử Dụng</label>
                <input asp-for="UsageDate" type="date" class="form-control" />
                <span asp-validation-for="UsageDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Purpose" class="control-label"><i class="fas fa-file-alt"></i> Mục Đích Sử Dụng</label>
                <input asp-for="Purpose" class="form-control" />
                <span asp-validation-for="Purpose" class="text-danger"></span>
            </div>

            <div class="form-group mt-3 text-center">
                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Tạo Mới</button>
                <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Quay Lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
}