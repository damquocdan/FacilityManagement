@model FacilityManagement.Models.Maintenance

@{
    ViewData["Title"] = "Chi tiết bảo trì";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1 class="text-primary"><i class="fas fa-tools"></i> Chi tiết bảo trì</h1>

    <div class="card shadow">
        <div class="card-body">
            <h4 class="card-title">Thông tin chi tiết</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2"><i class="far fa-calendar-alt"></i> Ngày bảo trì</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.MaintenanceDate)</dd>

                <dt class="col-sm-2"><i class="fas fa-file-alt"></i> Mô tả</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>

                <dt class="col-sm-2"><i class="fas fa-check-circle"></i> Trạng thái</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Status)</dd>

                <dt class="col-sm-2"><i class="fas fa-wrench"></i> Thiết bị</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Equipment.EquipmentName)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Quay lại danh sách</a>
    </div>
</div>