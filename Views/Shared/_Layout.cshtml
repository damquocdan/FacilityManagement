<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FacilityManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FacilityManagement.styles.css" asp-append-version="true" />
    <style>
        /* Màu nền và chữ */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 16px;
            line-height: 1.6;
            background-color: #ffffff;
            color: #4b8ac9;
            animation: fadeIn 1.5s ease-in-out;
        }

        /* Kiểu chữ và hiệu ứng cho các tiêu đề */
        h1, h2, h3, h4, h5, h6 {
            font-weight: bold;
            color: #eb272c;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.2);
            animation: bounceIn 1s;
        }

        h1 {
            font-size: 2.5em;
        }

        h2 {
            font-size: 2em;
        }

        h3 {
            font-size: 1.75em;
        }

        h4 {
            font-size: 1.5em;
        }

        h5 {
            font-size: 1.25em;
        }

        h6 {
            font-size: 1em;
        }
        /* Style cho Navbar */
        .navbar {
            background-color: #ffffff !important;
        }

        .navbar-brand, .nav-link {
            color: #4b8ac9 !important;
        }

            .navbar-brand:hover, .nav-link:hover {
                color: #eb272c !important;
            }
        /* Đổi màu tiêu đề */
        h1, h2, h3, h4, h5, h6 {
            color: #eb272c;
        }
        /* Footer */
        footer {
            background-color: #eb272c;
            color: #ffffff;
        }

            footer a {
                color: #ffffff;
            }

        .navbar-nav .nav-link {
            font-size: 1.5em; /* Điều chỉnh kích thước chữ theo ý bạn */
            font-weight: bold;
            transition: color 0.3s ease, transform 0.3s ease;
        }
            /* Hiệu ứng hover cho nav-link */
            .navbar-nav .nav-link:hover {
                color: #eb272c; /* Ví dụ đổi màu khi hover */
                transform: scale(1.1);
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark border-bottom box-shadow mb-3">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/images/logo.png" alt="Logo" style="height: 80px;width:80px; margin: 0px;" />
            </a>
            <div class="container-fluid">
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Chuyển đổi điều hướng">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Usages" asp-action="Index">Lịch sử dụng phòng</a>
                        </li>
                        @if (Context.Session.GetString("CustomerLogin") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Rooms" asp-action="Index" asp-route-staffId="@Context.Session.GetInt32("CustomerId")">Phòng</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Maintenances" asp-action="Create" asp-route-staffId="@Context.Session.GetInt32("CustomerId")">Báo cáo bảo trì</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Logout", "LoginC")">Đăng xuất</a>
                            </li>
                        }
                        else
                        {
                            <!-- Hiển thị Đăng nhập khi chưa đăng nhập -->
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="LoginC" asp-action="Index">Đăng nhập</a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - FacilityManagement - <a asp-area="" asp-controller="Home" asp-action="Privacy">Chính sách bảo mật</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
