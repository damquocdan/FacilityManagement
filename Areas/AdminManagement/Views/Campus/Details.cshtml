@model FacilityManagement.Models.Campus

@{
    ViewData["Title"] = "Chi Tiết Khuôn Viên";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<style>
    body {
        background-color: white;
    }

    .text-primary {
        color: #052c93;
    }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
        color: black;
    }

        .btn-warning:hover {
            background-color: #e0a800;
            border-color: #d39e00;
        }

    .btn-link.text-primary {
        color: #052c93;
        font-weight: bold;
    }

        .btn-link.text-primary:hover {
            text-decoration: underline;
        }
</style>

<h1 class="text-primary"><i class="fas fa-info-circle"></i> Chi Tiết Khuôn Viên</h1>

<div>
    <h4 class="text-primary"><i class="fas fa-map-marked-alt"></i> Thông Tin Khuôn Viên</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <i class="fas fa-signature"></i> @Html.DisplayNameFor(model => model.CampusName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CampusName)
        </dd>
        <dt class="col-sm-2">
            <i class="fas fa-map-marker-alt"></i> @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            <i class="fas fa-file-alt"></i> @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.CampusId" class="btn btn-warning"><i class="fas fa-edit"></i> Chỉnh Sửa</a>
    <a asp-action="Index" class="btn btn-link text-primary"><i class="fas fa-arrow-left"></i> Trở Về Danh Sách</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
}