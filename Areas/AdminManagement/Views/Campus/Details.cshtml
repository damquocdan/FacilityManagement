@model FacilityManagement.Models.Campus

@{
    ViewData["Title"] = "Chi Tiết";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<h1 class="text-primary">Chi Tiết</h1>

<div>
    <h4 class="text-primary">Thông Tin Khuôn Viên</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CampusName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CampusName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.CampusId" class="btn btn-warning" style="background-color: #052c93; border-color: #052c93; color: white;">Chỉnh Sửa</a> 
    <a asp-action="Index" class="btn btn-link text-primary">Trở Về Danh Sách</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
