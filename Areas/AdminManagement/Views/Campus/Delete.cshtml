@model FacilityManagement.Models.Campus

@{
    ViewData["Title"] = "Xóa";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<h1 class="text-primary">Xóa</h1>

<h3 class="text-danger">Bạn có chắc chắn muốn xóa không?</h3>
<div>
    <h4 class="text-primary">Thông Tin Khuôn Viên</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CampusName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CampusName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CampusId" />
        <input type="submit" value="Xóa" class="btn btn-danger" style="background-color: #052c93; border-color: #052c93;" />
        <a asp-action="Index" class="btn btn-link text-primary">Trở Về Danh Sách</a>
    </form>
</div>
