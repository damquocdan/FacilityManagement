@model FacilityManagement.Models.Campus

@{
    ViewData["Title"] = "Chỉnh Sửa";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<h1 class="text-primary">Chỉnh Sửa</h1>

<h4 class="text-primary">Thông Tin Khuôn Viên</h4>
<hr />
<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CampusId" />

            <div class="form-group">
                <label asp-for="CampusName" class="control-label">Tên Khuôn Viên</label>
                <input asp-for="CampusName" class="form-control" style="border-color: #052c93;" />
                <span asp-validation-for="CampusName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address" class="control-label">Địa Chỉ</label>
                <input asp-for="Address" class="form-control" style="border-color: #052c93;" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label">Mô Tả</label>
                <input asp-for="Description" class="form-control" style="border-color: #052c93;" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" style="background-color: #052c93; border-color: #052c93;" />
            </div>
        </form>
    </div>
</div>

<div class="text-center">
    <a asp-action="Index" class="btn btn-link">Trở Về Danh Sách</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
