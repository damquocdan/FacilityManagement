@model IEnumerable<FacilityManagement.Models.Campus>

@{
    ViewData["Title"] = "Danh Sách Cơ Sở";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<!-- Custom CSS -->
<style>
    body {
        background-color: white;
    }

    .text-primary {
        color: #052c93;
    }

    .btn-primary {
        background-color: #052c93;
        border-color: #052c93;
    }

        .btn-primary:hover {
            background-color: #041f6b;
            border-color: #041f6b;
        }

    .btn-secondary {
        background-color: #ccc;
        border-color: #ccc;
        color: black;
    }

        .btn-secondary:hover {
            background-color: #b3b3b3;
        }

    .table th {
        background-color: #052c93;
        color: white;
        text-align: center;
    }

    .table td {
        text-align: center;
        vertical-align: middle;
    }

    .action-links a {
        margin: 0 5px;
        text-decoration: none;
        font-weight: bold;
    }

        .action-links a:hover {
            text-decoration: underline;
        }
</style>

<h1 class="text-primary text-center">Danh Sách Cơ Sở</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Thêm Cơ Sở</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Tên Cơ Sở</th>
            <th>Địa Chỉ</th>
            <th>Mô Tả</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.CampusName)</td>
                <td>@Html.DisplayFor(modelItem => item.Address)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td class="action-links">
                    <a asp-action="Edit" asp-route-id="@item.CampusId" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Details" asp-route-id="@item.CampusId" class="btn btn-info btn-sm">Chi Tiết</a>
                    <a asp-action="Delete" asp-route-id="@item.CampusId" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
