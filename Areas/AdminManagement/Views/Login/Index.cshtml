@model FacilityManagement.Areas.AdminManagement.Models.Login
@{
    Layout = null;
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger mt-3">
        <ul>
            @foreach (var modelState in ViewData.ModelState.Values)
            {
                foreach (var error in modelState.Errors)
                {
                    <li>@error.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Đăng Nhập Quản Trị</title>

    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="../../plugins/fontawesome-free/css/all.min.css">
    <!-- Bootstrap -->
    <link rel="stylesheet" href="../../plugins/bootstrap/css/bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="../../dist/css/adminlte.min.css">

    <style>
        body {
            background-color: #ffffff;
        }

        .login-box {
            width: 400px;
            margin: auto;
            margin-top: 80px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            padding: 20px;
            border-radius: 8px;
            background-color: #ffffff;
            border-top: 5px solid #eb272c;
        }

        .login-title {
            font-weight: 700;
            font-size: 24px;
            color: #eb272c;
            text-align: center;
            margin-bottom: 20px;
        }

        .custom-input {
            border-radius: 8px;
            margin-top: 10px;
            height: 45px;
        }

        .btn-primary {
            width: 100%;
            border-radius: 8px;
            margin-top: 20px;
            background-color: #eb272c;
            border-color: #eb272c;
        }

            .btn-primary:hover {
                background-color: #c91f24;
                border-color: #c91f24;
            }

        .alert {
            margin-top: 20px;
            font-size: 14px;
        }

        .form-control {
            border: 1px solid #4b8ac9;
        }

        .form-group label {
            font-weight: bold;
            color: #4b8ac9;
        }

        .btn-secondary {
            width: 100%;
            border-radius: 8px;
            background-color: #4b8ac9;
            border-color: #4b8ac9;
            color: white;
            margin-top: 10px;
        }

            .btn-secondary:hover {
                background-color: #3a78a7;
                border-color: #3a78a7;
            }
    </style>
</head>
<body class="hold-transition login-page">

    <div class="login-box">
        <div class="login-title">Đăng Nhập Quản Trị</div>
        <form asp-action="Index" method="post">
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" type="email" class="custom-input form-control" placeholder="Nhập email" required />
            </div>

            <div class="form-group">
                <label asp-for="Password">Mật Khẩu</label>
                <input asp-for="Password" type="password" class="custom-input form-control" placeholder="Nhập mật khẩu" required />
            </div>

            <button type="submit" class="btn btn-primary">Đăng Nhập</button>
            <a href="#" class="btn btn-secondary">Quên Mật Khẩu?</a>
        </form>
    </div>

    <!-- Scripts -->
    <script src="../../plugins/jquery/jquery.min.js"></script>
    <script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="../../dist/js/adminlte.min.js"></script>
</body>
</html>
