@model FacilityManagement.Models.Admin

@{
    ViewData["Title"] = "Xóa Quản Trị Viên";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<!-- Custom CSS -->
<style>
    body {
        background-color: white;
    }

    .btn-danger {
        background-color: #d9534f;
        border-color: #d9534f;
    }

        .btn-danger:hover {
            background-color: #c9302c;
            border-color: #c9302c;
        }

    .btn-secondary {
        background-color: #052c93;
        border-color: #052c93;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #041f6a;
            border-color: #041f6a;
        }

    .text-primary {
        color: #052c93;
    }

    .form-group label {
        font-weight: bold;
        color: #052c93;
    }
</style>

<h1 class="text-primary">Xóa Quản Trị Viên</h1>

<h3 class="text-danger">Bạn có chắc chắn muốn xóa quản trị viên này?</h3>
<div>
    <h4 class="text-primary">Thông Tin Quản Trị</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Họ và Tên</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.AdminName)</dd>

        <dt class="col-sm-3">Tên Đăng Nhập</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Username)</dd>

        <dt class="col-sm-3">Mật Khẩu</dt>
        <dd class="col-sm-9">********</dd> <!-- Ẩn mật khẩu -->

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

        <dt class="col-sm-3">Số Điện Thoại</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Phone)</dd>

        <dt class="col-sm-3">Ngày Tạo</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedAt)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="AdminId" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Quay Lại</a>
    </form>
</div>
