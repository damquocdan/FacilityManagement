@model FacilityManagement.Models.Usage

@{
    ViewData["Title"] = "Tạo Thông Tin Sử Dụng";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<style>
    body {
        background-color: #f8f9fa;
    }

    .container {
        background-color: white;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    h1 {
        color: #052c93;
    }

    .form-group label {
        color: #052c93;
        font-weight: bold;
    }

    .btn-primary {
        background-color: #052c93;
        border-color: #052c93;
    }

        .btn-primary:hover {
            background-color: #042673;
            border-color: #042673;
        }

    .btn-secondary {
        background-color: #ccc;
        border-color: #ccc;
        color: black;
    }

        .btn-secondary:hover {
            background-color: #b3b3b3;
        }
</style>

<div class="container">
    <h1 class="text-primary"><i class="fas fa-plus-circle"></i> Tạo Thông Tin Sử Dụng</h1>

    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="RoomId" class="control-label"><i class="fas fa-door-open"></i> Phòng</label>
                    <select asp-for="RoomId" class="form-control" asp-items="ViewBag.RoomId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="UsedBy" class="control-label"><i class="fas fa-user"></i> Người Sử Dụng</label>
                    <input asp-for="UsedBy" class="form-control" />
                    <span asp-validation-for="UsedBy" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UsageDate" class="control-label"><i class="fas fa-calendar-alt"></i> Ngày Sử Dụng</label>
                    <input asp-for="UsageDate" class="form-control" />
                    <span asp-validation-for="UsageDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Purpose" class="control-label"><i class="fas fa-file-alt"></i> Mục Đích</label>
                    <input asp-for="Purpose" class="form-control" />
                    <span asp-validation-for="Purpose" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Tạo</button>
                    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Quay Lại Danh Sách</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
}