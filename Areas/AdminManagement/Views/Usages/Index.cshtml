@model IEnumerable<FacilityManagement.Models.Usage>

@{
    ViewData["Title"] = "Danh sách sử dụng";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<style>
    body {
        background-color: #f8f9fa;
    }

    .container {
        background-color: white;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    h1 {
        color: #052c93;
    }

    .table {
        width: 100%;
    }

    th, td {
        border: 1px solid #dee2e6;
        padding: 10px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
        color: #052c93;
    }

    a {
        color: #052c93;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }
</style>

<div class="container">
    <h1>Danh sách sử dụng</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Tạo mới</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UsedBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UsageDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Purpose)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Room)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UsedBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UsageDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Purpose)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Room.RoomName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.UsageId">Sửa</a> 
                        <a asp-action="Details" asp-route-id="@item.UsageId">Chi tiết</a> 
                        <a asp-action="Delete" asp-route-id="@item.UsageId">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>