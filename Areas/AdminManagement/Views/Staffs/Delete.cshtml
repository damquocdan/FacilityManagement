@model FacilityManagement.Models.Staff

@{
    ViewData["Title"] = "Xóa nhân viên";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<h1 class="text-danger">Xóa nhân viên</h1>

<h3>Bạn có chắc chắn muốn xóa nhân viên này?</h3>
<div class="card shadow-sm p-4 bg-white rounded">
    <h4 class="text-dark">Thông tin nhân viên</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 text-primary">
            @Html.DisplayNameFor(model => model.StaffName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StaffName)
        </dd>
        <dt class="col-sm-2 text-primary">
            @Html.DisplayNameFor(model => model.Position)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Position)
        </dd>
        <dt class="col-sm-2 text-primary">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class="col-sm-2 text-primary">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2 text-primary">
            @Html.DisplayNameFor(model => model.AssignedRoom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AssignedRoom.RoomName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="StaffId" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
    </form>
</div>

<style>
    body {
        background-color: white;
    }

    .text-primary {
        color: #052c93 !important;
    }

    .btn-primary {
        background-color: #052c93;
        border-color: #052c93;
    }

        .btn-primary:hover {
            background-color: #041f6b;
            border-color: #041f6b;
        }
</style>
