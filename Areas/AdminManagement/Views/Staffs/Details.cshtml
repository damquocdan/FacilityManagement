@model FacilityManagement.Models.Staff

@{
    ViewData["Title"] = "Chi Tiết Nhân Viên";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<style>
    body {
        background-color: white;
    }

    .text-primary {
        color: #052c93 !important;
    }

    .btn-primary {
        background-color: #052c93;
        border-color: #052c93;
        color: white;
    }

        .btn-primary:hover {
            background-color: #041f6b;
            border-color: #041f6b;
        }

    .btn-secondary {
        background-color: #ccc;
        border-color: #ccc;
        color: black;
    }

        .btn-secondary:hover {
            background-color: #b3b3b3;
        }
</style>

<h1 class="text-primary"><i class="fas fa-info-circle"></i> Chi Tiết Nhân Viên</h1>

<div class="card shadow-sm p-4 bg-white rounded">
    <h4 class="text-dark"><i class="fas fa-user"></i> Thông Tin Nhân Viên</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 text-primary">
            <i class="fas fa-signature"></i> @Html.DisplayNameFor(model => model.StaffName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StaffName)
        </dd>
        <dt class="col-sm-2 text-primary">
            <i class="fas fa-briefcase"></i> @Html.DisplayNameFor(model => model.Position)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Position)
        </dd>
        <dt class="col-sm-2 text-primary">
            <i class="fas fa-phone"></i> @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class="col-sm-2 text-primary">
            <i class="fas fa-envelope"></i> @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2 text-primary">
            <i class="fas fa-door-open"></i> @Html.DisplayNameFor(model => model.AssignedRoom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AssignedRoom.RoomName)
        </dd>
    </dl>
</div>
<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.StaffId" class="btn btn-primary"><i class="fas fa-edit"></i> Chỉnh Sửa</a>
    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Quay Lại Danh Sách</a>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
}