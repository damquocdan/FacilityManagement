@model IEnumerable<FacilityManagement.Models.Equipment>

@{
    ViewData["Title"] = "Danh Sách Thiết Bị";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<h1 class="text-primary">Danh Sách Thiết Bị</h1>

<p>
    <a asp-action="Create" class="btn btn-primary" style="background-color: #052c93; border-color: #052c93;">Tạo Mới</a>
</p>

<table class="table table-bordered">
    <thead class="table-light">
        <tr>
            <th>Hình Ảnh</th>
            <th>Tên Thiết Bị</th>
            <th>Loại Thiết Bị</th>
            <th>Trạng Thái</th>
            <th>Mô Tả</th>
            <th>Phòng</th>
            <th class="text-center">Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.Image" alt="Hình ảnh" style="width: 50px; height: 50px; border-radius: 5px;">
                </td>
                <td>@item.EquipmentName</td>
                <td>@item.EquipmentType</td>
                <td>
                    @{
                        string statusClass = "";
                        switch (item.Status)
                        {
                            case "Đang bảo trì":
                                statusClass = "badge bg-warning text-dark";
                                break;
                            case "Đang sửa chữa":
                                statusClass = "badge bg-orange text-dark"; // Màu cam (tùy chỉnh)
                                break;
                            case "Hỏng":
                                statusClass = "badge bg-danger";
                                break;
                            case "Sẵn sàng":
                                statusClass = "badge bg-success";
                                break;
                            default:
                                statusClass = "badge bg-secondary";
                                break;
                        }
                    }
                    <span class="@statusClass">@item.Status</span>
                </td>
                <td>@item.Description</td>
                <td>@item.Room.RoomName</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.EquipmentId" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Details" asp-route-id="@item.EquipmentId" class="btn btn-info btn-sm">Chi Tiết</a>
                    <a asp-action="Delete" asp-route-id="@item.EquipmentId" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Custom Style for Orange Badge -->
<style>
    .bg-orange {
        background-color: #fd7e14 !important;
        color: white;
    }
</style>
