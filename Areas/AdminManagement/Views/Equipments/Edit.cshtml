@model FacilityManagement.Models.Equipment

@{
    ViewData["Title"] = "Chỉnh Sửa Thiết Bị";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<style>
    body {
        background-color: white;
    }

    .text-primary {
        color: #052c93;
    }

    .btn-primary {
        background-color: #052c93;
        border-color: #052c93;
        color: white;
    }

        .btn-primary:hover {
            background-color: #041f6a;
            border-color: #041f6a;
        }

    .btn-secondary {
        background-color: #ccc;
        border-color: #ccc;
        color: black;
    }

        .btn-secondary:hover {
            background-color: #b3b3b3;
        }

    .form-group label {
        font-weight: bold;
        color: #052c93;
    }
</style>

<h1 class="text-primary"><i class="fas fa-edit"></i> Chỉnh Sửa Thiết Bị</h1>

<h4><i class="fas fa-info-circle"></i> Thông Tin Thiết Bị</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EquipmentId" />

            <div class="form-group">
                <label asp-for="Image" class="control-label"><i class="fas fa-image"></i> Hình Ảnh</label>
                <input asp-for="Image" type="file" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EquipmentName" class="control-label"><i class="fas fa-signature"></i> Tên Thiết Bị</label>
                <input asp-for="EquipmentName" class="form-control" />
                <span asp-validation-for="EquipmentName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EquipmentType" class="control-label"><i class="fas fa-list-alt"></i> Loại Thiết Bị</label>
                <input asp-for="EquipmentType" class="form-control" />
                <span asp-validation-for="EquipmentType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RoomId" class="control-label"><i class="fas fa-door-open"></i> Phòng</label>
                <select asp-for="RoomId" class="form-control" asp-items="ViewBag.RoomId"></select>
                <span asp-validation-for="RoomId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Status" class="control-label"><i class="fas fa-toggle-on"></i> Trạng Thái</label>
                <select asp-for="Status" class="form-control">
                    <option value="Sẵn sàng">Sẵn sàng</option>
                    <option value="Đang sửa chữa">Đang sửa chữa</option>
                    <option value="Hỏng">Hỏng</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"><i class="fas fa-file-alt"></i> Mô Tả</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Lưu</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Quay Lại Danh Sách</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
}