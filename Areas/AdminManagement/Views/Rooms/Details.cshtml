@model FacilityManagement.Models.Room

@{
    ViewData["Title"] = "Chi Tiết Phòng";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<style>
    body {
        background-color: white;
    }

    .text-primary {
        color: #052c93;
    }

    .btn-primary {
        background-color: #052c93;
        border-color: #052c93;
        color: white;
    }

        .btn-primary:hover {
            background-color: #041f6a;
            border-color: #041f6a;
        }

    .btn-secondary {
        background-color: #ccc;
        border-color: #ccc;
        color: black;
    }

        .btn-secondary:hover {
            background-color: #b3b3b3;
        }
</style>

<h1 class="text-primary"><i class="fas fa-info-circle"></i> Chi Tiết Phòng</h1>

<div>
    <h4 class="text-dark"><i class="fas fa-door-open"></i> Thông Tin Phòng</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3 text-primary fw-bold">
            <i class="fas fa-signature"></i> Tên Phòng
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.RoomName)
        </dd>

        <dt class="col-sm-3 text-primary fw-bold">
            <i class="fas fa-list-alt"></i> Loại Phòng
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.RoomType)
        </dd>

        <dt class="col-sm-3 text-primary fw-bold">
            <i class="fas fa-users"></i> Sức Chứa
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Capacity)
        </dd>

        <dt class="col-sm-3 text-primary fw-bold">
            <i class="fas fa-file-alt"></i> Mô Tả
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt class="col-sm-3 text-primary fw-bold">
            <i class="fas fa-building"></i> Toà Nhà
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Building.BuildingName)
        </dd>
    </dl>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.RoomId" class="btn btn-primary"><i class="fas fa-edit"></i> Chỉnh Sửa</a>
    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Quay Lại</a>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
}