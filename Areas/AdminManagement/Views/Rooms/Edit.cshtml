@model FacilityManagement.Models.Room

@{
    ViewData["Title"] = "Chỉnh Sửa Phòng";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<style>
    body {
        background-color: white;
    }

    .text-primary {
        color: #052c93;
    }

    .btn-primary {
        background-color: #052c93;
        border-color: #052c93;
        color: white;
    }

        .btn-primary:hover {
            background-color: #041f6a;
            border-color: #041f6a;
        }

    .btn-secondary {
        background-color: #ccc;
        border-color: #ccc;
        color: black;
    }

        .btn-secondary:hover {
            background-color: #b3b3b3;
        }

    .form-label {
        font-weight: bold;
        color: #052c93;
    }

    .border-primary {
        border-color: #052c93 !important;
    }
</style>

<h1 class="text-primary"><i class="fas fa-edit"></i> Chỉnh Sửa Phòng</h1>

<h4 class="text-dark"><i class="fas fa-info-circle"></i> Thông Tin Phòng</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RoomId" />

            <div class="form-group">
                <label asp-for="RoomName" class="control-label"><i class="fas fa-signature"></i> Tên Phòng</label>
                <input asp-for="RoomName" class="form-control border-primary" />
                <span asp-validation-for="RoomName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="BuildingId" class="control-label"><i class="fas fa-building"></i> Toà Nhà</label>
                <select asp-for="BuildingId" class="form-control border-primary" asp-items="ViewBag.BuildingId"></select>
                <span asp-validation-for="BuildingId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RoomType" class="control-label"><i class="fas fa-list-alt"></i> Loại Phòng</label>
                <input asp-for="RoomType" class="form-control border-primary" />
                <span asp-validation-for="RoomType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Capacity" class="control-label"><i class="fas fa-users"></i> Sức Chứa</label>
                <input asp-for="Capacity" class="form-control border-primary" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"><i class="fas fa-file-alt"></i> Mô Tả</label>
                <input asp-for="Description" class="form-control border-primary" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Lưu</button>
                <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Quay Lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
}