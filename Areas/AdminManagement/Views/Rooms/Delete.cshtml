@model FacilityManagement.Models.Room

@{
    ViewData["Title"] = "Xóa Phòng";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<style>
    body {
        background-color: white;
    }

    .text-primary {
        color: #052c93;
    }

    .btn-danger {
        background-color: #d9534f;
        border-color: #d9534f;
        color: white;
    }

        .btn-danger:hover {
            background-color: #c9302c;
            border-color: #ac2925;
        }

    .btn-secondary {
        background-color: #ccc;
        border-color: #ccc;
        color: black;
    }

        .btn-secondary:hover {
            background-color: #b3b3b3;
        }
</style>

<h1 class="text-primary"><i class="fas fa-trash-alt"></i> Xóa Phòng</h1>

<h3 class="text-danger"><i class="fas fa-exclamation-triangle"></i> Bạn có chắc chắn muốn xóa phòng này?</h3>

<div>
    <h4 class="text-dark"><i class="fas fa-info-circle"></i> Thông Tin Phòng</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3 text-primary fw-bold">
            <i class="fas fa-signature"></i> Tên Phòng
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.RoomName)
        </dd>

        <dt class="col-sm-3 text-primary fw-bold">
            <i class="fas fa-list-alt"></i> Loại Phòng
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.RoomType)
        </dd>

        <dt class="col-sm-3 text-primary fw-bold">
            <i class="fas fa-users"></i> Sức Chứa
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Capacity)
        </dd>

        <dt class="col-sm-3 text-primary fw-bold">
            <i class="fas fa-file-alt"></i> Mô Tả
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt class="col-sm-3 text-primary fw-bold">
            <i class="fas fa-building"></i> Toà Nhà
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Building.BuildingName)
        </dd>
    </dl>

    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="RoomId" />
        <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Xóa</button>
        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Quay Lại</a>
    </form>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
}