@model IEnumerable<FacilityManagement.Models.Building>

@{
    ViewData["Title"] = "Danh Sách Tòa Nhà";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<!-- Custom CSS -->
<style>
    body {
        background-color: white;
    }

    .text-primary {
        color: #052c93;
    }

    .table thead {
        background-color: #052c93;
        color: white;
    }

    .table-hover tbody tr:hover {
        background-color: #f2f2f2;
    }

    .btn-primary {
        background-color: #052c93;
        border-color: #052c93;
        color: white;
    }

        .btn-primary:hover {
            background-color: #041f6a;
            border-color: #041f6a;
        }

    .action-links a {
        color: #052c93;
        font-weight: bold;
        margin-right: 10px;
    }

        .action-links a:hover {
            text-decoration: underline;
        }
</style>

<h1 class="text-primary">Danh Sách Tòa Nhà</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Thêm Tòa Nhà Mới</a>
</p>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Tên Tòa Nhà</th>
            <th>Mô Tả</th>
            <th>Khuôn Viên</th>
            <th>Thao Tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.BuildingName)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.Campus.CampusId)</td>
                <td class="action-links">
                    <a asp-action="Edit" asp-route-id="@item.BuildingId">Chỉnh Sửa</a> 
                    <a asp-action="Details" asp-route-id="@item.BuildingId">Chi Tiết</a> 
                    <a asp-action="Delete" asp-route-id="@item.BuildingId" class="text-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
