@model FacilityManagement.Models.Building

@{
    ViewData["Title"] = "Chỉnh Sửa Tòa Nhà";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<style>
    body {
        background-color: white;
    }

    .text-primary {
        color: #052c93;
    }

    .btn-primary {
        background-color: #052c93;
        border-color: #052c93;
        color: white;
    }

        .btn-primary:hover {
            background-color: #041f6a;
            border-color: #041f6a;
        }

    .form-control {
        border-radius: 8px;
        border: 1px solid #ccc;
    }

    .form-group label {
        font-weight: bold;
        color: #052c93;
    }

    .back-link {
        color: #052c93;
        font-weight: bold;
    }

        .back-link:hover {
            text-decoration: underline;
        }
</style>

<h1 class="text-primary"><i class="fas fa-edit"></i> Chỉnh Sửa Tòa Nhà</h1>

<h4><i class="fas fa-info-circle"></i> Thông Tin Tòa Nhà</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BuildingId" />

            <div class="form-group mb-3">
                <label asp-for="BuildingName" class="control-label"><i class="fas fa-signature"></i> Tên Tòa Nhà</label>
                <input asp-for="BuildingName" class="form-control" />
                <span asp-validation-for="BuildingName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CampusId" class="control-label"><i class="fas fa-map-marker-alt"></i> Mã Cơ Sở</label>
                <select asp-for="CampusId" class="form-control" asp-items="ViewBag.CampusId"></select>
                <span asp-validation-for="CampusId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"><i class="fas fa-file-alt"></i> Mô Tả</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Lưu Thay Đổi</button>
                <a asp-action="Index" class="btn btn-outline-secondary"><i class="fas fa-times"></i> Hủy</a>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="back-link"><i class="fas fa-arrow-left"></i> Quay lại danh sách</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
}